<%= form_for @post, class: "form-horizontal" do |f| %>

<% if @post.errors.any? %>
  <% @post.errors.full_messages.each do |e| %>
    <%= e %>
  <% end %>
<% end %>


  <div class="form-row">
    <div class="form-group col-md-4">
      <%= f.label :date, class: "col-sm-2 control-label" %>
      <%= f.date_field :date, class: "form-control" %>
    </div>

    <div class="form-group col-md-8">
      <%= f.label :body, class: "col-sm-2 control-label" %>
      <%= f.text_area :body, class: "custom-text-area form-control" %>
    </div>
  </div>

  <%= render partial: 'status', locals: { f: f } if current_user.type == 'AdminUser' %>


  <%= f.submit 'Save', class: 'btn btn-primary' %>
<% end %>