<h1>Posts</h1>


  

<table class="table table-bordered table-hover table-sm">
  <thead>
    <tr>
      <th>
        #
      </th>
      <th>
        Date
      </th>
      <th>
        Body
      </th>
      <th>
        User
      </th>
    </tr>
  </thead>
  <tbody>
  <% @posts.each do |post| %>
    <tr>
      <td>
        <%= post.id %>
      </td>
      <td>
        <%= post.date %>
      </td>
      <td>
        <%= post.body %>
      </td>
      <td>
        <%= post.user.last_name %>
      </td>
    </tr>
  <% end %>
    
  </tbody>
</table>


